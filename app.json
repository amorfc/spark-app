{
	"expo": {
		"name": "Spark App",
		"slug": "spark-app",
		"scheme": "spark-app",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/icon.png",
		"userInterfaceStyle": "light",
		"assetBundlePatterns": ["**/*"],
		"newArchEnabled": true,
		"ios": {
			"supportsTablet": false,
			"config": {
				"usesNonExemptEncryption": false
			},
			"splash": {
				"image": "./assets/splash.png",
				"resizeMode": "cover",
				"backgroundColor": "#ffffff",
				"dark": {
					"backgroundColor": "#000000",
					"resizeMode": "cover",
					"image": "./assets/splash-dark.png"
				}
			},
			"icon": {
				"dark": "./assets/icon-dark.png",
				"light": "./assets/icon.png"
			},
			"bundleIdentifier": "com.sparkcompanytr.sparkapp",
			"infoPlist": {
				"ITSAppUsesNonExemptEncryption": false,
				"NSLocationWhenInUseUsageDescription": "We use your location to show nearby safe locations and transportation points on the map.",
				"NSLocationAlwaysAndWhenInUseUsageDescription": "Your location helps us personalize your experience and show relevant safety data around you."
			}
		},
		"android": {
			"buildType": "app-bundle",
			"adaptiveIcon": {
				"foregroundImage": "./assets/adaptive-icon.png"
			},
			"splash": {
				"image": "./assets/splash.png",
				"resizeMode": "cover",
				"backgroundColor": "#ffffff",
				"dark": {
					"backgroundColor": "#000000",
					"resizeMode": "cover",
					"image": "./assets/splash-dark.png"
				}
			},

			"package": "com.sparkcompanytr.sparkapp"
		},
		"androidStatusBar": {
			"backgroundColor": "#ffffff",
			"barStyle": "dark-content"
		},
		"androidNavigationBar": {
			"backgroundColor": "#ffffff",
			"barStyle": "dark-content"
		},
		"experiments": {
			"typedRoutes": true
		},
		"plugins": [
			"expo-router",
			"expo-secure-store",
			[
				"@rnmapbox/maps",
				{
					"RNMapboxMapsImpl": "mapbox"
				}
			]
		],
		"extra": {
			"router": {},
			"eas": {
				"projectId": "dd1be4d4-52ed-4255-a0e1-5d7e35339a8a"
			}
		},
		"owner": "sparkcompanytr"
	}
}
